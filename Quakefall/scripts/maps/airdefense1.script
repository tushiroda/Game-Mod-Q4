float firstHealTime = 0;

//------------------------------------------------------------------------------------
void meetAndersonIntro()
{
	$npc_anderson_outdoor.setTalkState( TALK_BUSY );
	$npc_anderson_outdoor.disableHeal();
	$npc_anderson_outdoor.disableMovement();
	
	// these lines really slow things up...so much so that I worry the player will truck by and miss the helpful point
	//	about a medic doing healing...
//	aiSpeakWait( $npc_anderson_outdoor, "lipsync_vo_1_1_1_21_1" ); // This is insane.
//	sys.wait(1);
//	aiSpeakWait( $npc_anderson_outdoor, "lipsync_vo_1_1_1_21_2" );
//	sys.wait(1);

	aiSpeak( $npc_anderson_outdoor, "lipsync_vo_1_1_1_20_1" ); // There he's stablilized for the moment
	sys.wait(.2);
	// treat to kneel talk
	aiScriptedAnimWait( $npc_anderson_outdoor, "treat_talk", 8, 0 );
	// kneeling talk loop
	aiScriptedAnimLoop( $npc_anderson_outdoor, "treat_talk_loop", 8 );

	aiSpeakDone( $npc_anderson_outdoor );
	$npc_anderson_outdoor.lookAt( $player1 );
	sys.wait(0.5);
	aiSpeak( $npc_anderson_outdoor, "lipsync_vo_1_1_1_20_2" ); // you're kane right?  My name is anderson.  Here let me heal you.
	sys.wait(3);
	$npc_anderson_outdoor.lookAt( $null_entity );

	// ugh, this is kind of ugly.  
	// Should we stand up for a heal?
	if ( $player1.distanceTo($npc_anderson_outdoor) < 200 )
	{
		aiSpeakDone( $npc_anderson_outdoor );
		$npc_anderson_outdoor.lookAt( $null_entity );
		aiScriptedStop( $npc_anderson_outdoor );
		sys.waitFrame();
		$npc_anderson_outdoor.enableHeal();
		$npc_anderson_outdoor.takePatient( $player1 );
		firstHealTime = 1;
		return;
	}

	// not close enough so get him back to his idle state
	aiScriptedAnim( $npc_anderson_outdoor, "medic_treating", 8, 1 );
	sys.wait(1.5);

	aiSpeakWait( $npc_anderson_outdoor, "lipsync_vo_1_1_1_20_3" );  // if you get hurt find a medic, they'll heal you up.
	$npc_anderson_outdoor.lookAt( $null_entity );

	$npc_anderson_outdoor.setTalkState( TALK_OK );
	$npc_anderson_outdoor.enableHeal();
}

// Post heal script for anderson
//------------------------------------------------------------------------------------
void returnAndersonToWork()
{
	aiScriptedFaceWait( $npc_anderson_outdoor, $tgt_null_anderson_medic_pos_face, 1 );
	// return to fiddling with Moooocalf.
	aiScriptedAnim( $npc_anderson_outdoor, "stand_to_treat", 8, 1 );

	if ( firstHealTime == 1 )
	{
		firstHealTime = 0;
		// we're doing a first time heal, so do this extra stuff this time around
		sys.wait(1);
		aiSpeakWait( $npc_anderson_outdoor, "lipsync_vo_1_1_1_20_3" );  // if you get hurt find a medic, they'll heal you up.
	}
}

