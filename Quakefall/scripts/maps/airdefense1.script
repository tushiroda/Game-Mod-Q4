	$mon_strogg_redshirt_1.setEnemy( $npc_hillstrom);
	sys.wait(.65);

	// hillstrom prepares to blow the strogg away
	aiScriptedAnim( $npc_hillstrom, "crouch_range_attack", 4, 0);

	// four frames... this is a hack but cool
	sys.waitFrame();
	sys.waitFrame();
	sys.waitFrame();
	sys.waitFrame();

