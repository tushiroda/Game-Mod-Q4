//knocks the player back from the grunt's busting pipes
//------------------------------------------------------------------------------------
void playerKnockback()	
{
	// apply knockback in Y only.  Pushing in any other direction is extra unsafe and can cause
	//	the player to get stuck in solid.  Yes, this is only a workaround...
	vector vKnockback = '0 -25000 15000';

	//$mvb_pipehit.remove();
	$player1.applyImpulse( $player1, $player1.getWorldOrigin(), vKnockback);

	// trigger double vision... with no hearing loss
	$player1.damageEffect( "dmg_shellshock_nohl" , $mon_grunt_pipes );
	$player1.startSound( "snd_pain_small", SND_CHANNEL_ANY, 0 );
}

