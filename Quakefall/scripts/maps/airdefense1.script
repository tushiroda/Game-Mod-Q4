void gruntBlasted()		
{
	//blood splatter
	$fx_death_gib.setWorldOrigin( $mon_grunt_wrestle.getJointPos( $mon_grunt_wrestle.getJointHandle( "chest")));
	$fx_death_gib.setAngles( $mon_grunt_wrestle.getAngles());
